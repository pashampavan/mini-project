extends head.pug 
block style
    style
        include ../static/entry.css
        include ../static/signup.css
block front 
    section.nav 
        .logo 
            img(src='https://vce.ac.in/img/vlogo%20-%20Copy.gif')
            i(style="fontsize=50px", class="fa fa-bank")
            h5 PIN BANK OF VASAVI
        ul 
            li 
                a(href="/") home
            li 
                a(href="#") about us
            li 
                a(href="#") contact
    section.signupcontainer
        h1(style="color:white;") Registor for pin bank of vasavi
        form(action="/sign" method='post')
            i(class="fa fa-user icon")
            input(type="text", name="name" , placeholder="Enter your name.." style="background-color: #131720;color:white;")
            .div
            i(class="fa fa-envelope icon")
            input(type="email", name="email" , placeholder="Enter your email.." style="background-color: #131720;color:white;")
            .div
            i(class="fa fa-book icon")
            input(type="date", name="date" , placeholder="Enter your date.." style="background-color: #131720;color:white;")
            .div
            i(class="fa fa-book icon")
            input(type="text", name="rollNo", placeholder="Enter your roll number.." style="background-color: #131720;color:white;")
            .div
            i(class="fa fa-key icon")
            input(type="password", name="password" , placeholder="Enter your password.." style="background-color: #131720;color:white;")
            .div
            //- input(type="password", name="password2" placeholder="Renter your password..")
            button(type="submit").btn submit  