        include ../static/entry.css
        include ../static/canteen.css
    script 
        include ../static/account.js
block nav 
    section.nav 
        .logo 
            img(src='https://vce.ac.in/img/vlogo%20-%20Copy.gif')
            i(style="fontsize=50px", class="fa fa-bank")
            h5 PIN BANK OF VASAVI
        ul 
            li 
                a(href="/") home
            li 
                a(href="#") about us
            li 
                a(href="#") contact
    script(type='text/javascript')
        let rollNo=#{rollNo}
        let password=#{password}
        console.log(rollNo)
        console.log(password)
    section.items
        h1 juicePoint of vasavi 
        .i 
            .type 
                h3 item 
                h3.h4 price 
                h3 purchage 
            .item 
                .img
                    img(src="https://cdn.pixabay.com/photo/2021/10/06/16/06/smoothie-6686147_960_720.png", alt="")
                h3 sapota juice
                h3.h4 25/-
                //- button.btn.btn1(type="button") total  
                form(action=`/buy?item=sapota juice&price=25&rollNo=${rollNo}&password=${password}&div=J` method="post")
