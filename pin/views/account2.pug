extends head.pug 
block style 
    style 
        include ../static/entry.css
        include ../static/account.css
        include ../static/account2.css
    script 
        include ../static/account.js
block nav 
    section.nav 
        .logo 
            img(src='https://vce.ac.in/img/vlogo%20-%20Copy.gif')
            i(style="fontsize=50px", class="fa fa-bank")
            h5 PIN BANK OF VASAVI
        ul 
            li 
                a(href="/") home
            li 
                a(href="#") about us
            li 
                a(href="/update") contact
    section.account
        h1 
            |   Account details 
        .details 
            h4 name:   #{name}
            h4 email:   #{email}
            h4 rollNo: #{rollNo}
            h4 savings:   #{savings}
            .a
                a(href=`/orders?rollNo=${rollNo}&password=${password}`) orders
            button.btn2(onclick="show()") history 
    section.history#history
        .type 
            h3 transaction type
            h3 name 
            h3 amount 
            h3 date and time 
        each x in history
            .box 
                h4 #{x.type} 
                h4 #{x.name} 
                h4 #{x.price}/-
                h4 #{x.time}

